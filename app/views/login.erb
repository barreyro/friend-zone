<div class='container'>
  <h2>Login:</h2>
  <% if @errors %>
    <%= @errors %>
  <% end %>
  <form action='/login' method='POST'>
    <p>Email:</p></br>
    <input type='name' name='user[email]'>
    <p>Password:</p></br>
    <input type='password' name='user[password]'>
    <input type='submit'>
  </form>
</div>

